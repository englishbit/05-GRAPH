#include<iostream>
#include<queue>
using namespace std;

#define MAX 10000
int graph[MAX][MAX]={0};
int vis[MAX]={0};
stack<int>stk;
void dfs(int node,int num_node){
    vis[node]=1;
    stk.push(node);
   

    while(!stk.empty()){

        int top=stk.top();
        stk.pop();
        for(int i=0;i<num_node;i++){
            if(graph[top][i]==1 && !vis[i]){
                vis[i]=1;
                stk.push(i);
            }
        }
    }

}


int main(){
    int node,edge,x,y;
    cin>>node>>edge;

    for(int i=0;i<edge;i++){
        cin>>x>>y;
        graph[x][y]=1;
        graph[y][x]=1;
    }

    int count=0;
    for(int i=0;i<node;i++){
        if(vis[i]==0){
            count++;
            dfs(i,node);
        }
    }

    cout<<count<<endl;

    return 0;

}